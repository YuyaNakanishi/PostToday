<div class="container">

  <div class="profile_avatar">
  <% if current_user.profile&.avatar&.attached? %>      
    <%= image_tag(@profile.avatar) %>
  <% else%>
    <%= image_tag 'avatar.png' ,:size => '50x50' %>
  <% end %>
  </div>
  
  <% if current_user.profile&.avatar&.attached? %>   
    <div class="profile_content">
    <div class="profile_name">
      <%= @profile.nickname %>
    </div>
    
    <div class="profile_introduction">
      <%= @profile.introduction%>
    </div>

    <%= link_to edit_profile_path(current_user) do %>     
      <p class="profile_update">プロフィールを更新</p>
    <% end %> 
  <% else%>
    <%= link_to edit_profile_path(current_user) do %>     
      <p class="profile_update">プロフィールを更新</p>
    <% end %>  
  </div>
  <% end %>

  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>

  <div class="profile_line"></div>
  <h2>自分の投稿一覧</h2>

  <% current_user.fashions.each do |f| %>
    <%= link_to fashion_path(f),class:"link_path" do %> 
      <div class="article_name"><%= f.name %><br></div>
      <div class="article_image"><%= image_tag(f.image) if f.image.attached? %><br></div>
    <% end %>   
  <% end %>
</div>
</div>