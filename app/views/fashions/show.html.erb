<div class="container">
<% if user_signed_in? %>  
  <% if flash[:notice] %>
    <p class="flash"><%= flash[:notice] %></p>
  <% end %>
  <div class="article">
    <div class="article_name"><%= @name %><br></div>
    <div class="article_image"><%= image_tag(@image) if @image.attached? %><br></div>
    <div class="article_content">
  <div class="dropdown">  
  <% if current_user.fashions.exists?(id: @fashion.id) %>
    <%= image_tag 'dot.png' ,class:"dot" %>
    <div class="dropdown_content">
      <%= link_to "Edit", edit_fashion_path(params[:id]) %>
      <%= link_to "delete", fashion_path(params[:id]), data: {method: 'delete', confirm:"本当に削除しても良いですか？"} %>
    </div>
  <% end %>  
  </div>  
  
  <div class="index_avatar">
    <%= link_to account_path(params[:id]) do %>
      <% if current_user.profile&.avatar&.attached? %>      
          <%= image_tag(@profile.avatar) if @profile.avatar.attached? %>
        <div><%= @profile.nickname %></div>
      <% else %>
        <%= image_tag 'avatar.png' ,:size => '50x50' %>
      <% end %> 
    <% end %>
  </div> 

  <div class="heart">
    <% if current_user.has_liked?(@fashion) %>
        <%= link_to fashion_like_path(@fashion), method: :delete do %>
          <%= image_tag 'heart-active.svg' %>
        <% end %>  
        <span><%= @fashion.like_count %></span>
    <% else %>
        <%= link_to fashion_like_path(@fashion), method: :post do %>
          <%= image_tag 'heart.svg' %> 
      <% end %>  
        <span><%= @fashion.like_count %></span>
    <% end %>  
  </div>  
      <div class="article_content_name">Tops</div>
        <%= @tops %><br>
      <div class="article_content_name">Pants</div>
        <%= @pants %><br>
      <div class="article_content_name">Shoes</div>
        <%= @shoes %><br>
      <div class="article_content_name">Other</div>
        <%= @other %><br>
      <div class="article_content_name">Description</div>
        <%= @description %><br>
      <div class="line"></div>
    </div>  
  </div>

  <% else %>
    <h2>Loginしてください</h2>
  <% end %>

  <h2 class="comment_title">Comments</h2>

  <% @comments.each do |comment| %>
    <div class="comment">
        <div class="comment_description">    
          <p><%= comment.comment %><br></p>
        </div>
    </div>  
  <% end %>

  <%= link_to new_fashion_comment_path(params[:id]) , class:"comment_link" do %>
    <div class="new_comment">
      <div class="user_comment">+ Add new comment</div>
    </div>
  <% end %>


</div>
