.container
  %h2 New Fashion
  - if @fashion.errors.any?
    - @fashion.errors.full_messages.each do |message|
      .errors= message
  = form_with(model:@fashion ,url: fashions_path ,method: 'post' ,local: true) do |f|
    %div
      = f.label :image, 'Fashion', class:"label"
    .field
      = f.file_field :image
    %div
      = f.label :name, 'Name', class:"label"
    .field
      = f.text_field :name ,class: "text"
    %div
      = f.label :tops, 'Tops', class:"label"
    .field
      = f.text_field :tops ,class: "text"
    %div
      = f.label :pants, 'Pants', class:"label"
    .field
      = f.text_field :pants ,class: "text"
    %div
      = f.label :shoes, 'Shoes', class:"label"
    .field
      = f.text_field :shoes ,class: "text"
    %div
      = f.label :other, 'Other',class:"label"
    .field
      = f.rich_text_area :other, class: "text_area"
    %div
      = f.label :description, 'Description',class:"label"
    .field
      = f.rich_text_area :description, class: "text_area"
    %div
      = f.submit '投稿する', class: "btn"
